---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Footer from "@components/Footer.astro";

export async function getStaticPaths() {
  const notes = await getCollection("notes");
  return notes.map((note) => ({
    params: { slug: note.slug },
    props: { note },
  }));
}

const { note } = Astro.props;
const { Content } = await note.render();
---

<Layout title={note.data.title}>
  <main id="main-content">
    <article>
      <header>
        <a href="/notes" class="back-link">‚Üê Back to Notes</a>
        <h1>{note.data.title}</h1>
        <div class="meta">
          <time datetime={note.data.date}>
            {new Date(note.data.date).toLocaleDateString()}
          </time>
          {note.data.tags && (
            <div class="tags">
              {note.data.tags.map((tag: string) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </header>
      
      <div class="content">
        <Content />
      </div>
    </article>
  </main>

  <Footer />
</Layout>

<style>
  main {
    @apply py-16 max-w-4xl mx-auto px-8;
  }
  .back-link {
    @apply inline-block mb-6 text-skin-accent hover:underline transition-colors duration-200;
  }
  h1 {
    @apply text-4xl font-bold tracking-tight mb-6;
    color: white;
  }
  .meta {
    @apply flex flex-wrap gap-4 items-center mb-8;
  }
  time {
    @apply text-sm;
    color: #9ca3af;
  }
  .tags {
    @apply flex gap-2;
  }
  .tag {
    @apply px-2 py-1 text-xs rounded;
    background-color: rgba(59, 130, 246, 0.2);
    color: #3b82f6;
  }
  .content {
    @apply prose prose-invert max-w-none;
  }
  .content h2 {
    @apply text-2xl font-bold mt-8 mb-4;
    color: white;
  }
  .content h3 {
    @apply text-xl font-semibold mt-6 mb-3;
    color: white;
  }
  .content p {
    @apply mb-4;
    color: #e5e7eb;
  }
  .content code {
    @apply px-2 py-1 rounded text-sm;
    background-color: rgba(255, 255, 255, 0.1);
    color: #fbbf24;
  }
  .content pre {
    @apply p-4 rounded-lg mb-4 overflow-x-auto;
    background-color: rgba(0, 0, 0, 0.3);
  }
  .content pre code {
    @apply p-0 bg-transparent;
  }
</style> 